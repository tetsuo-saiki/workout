nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  = link_to 'Workout!', toppages_index_path, class: "navbar-brand"
  button.navbar-toggler[type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation"]
    span.navbar-toggler-icon
  #navbarColor01.navbar-collapse.collapse[style=""]
    ul.navbar-nav.mr-auto
      - if user_signed_in?
        li.nav-item
          - if @user.image.blank?
            = link_to image_tag("#{gravatar_url(@user, { size: 40 })}", {alt: "ユーザプロフィール", class: "img-rounded"}), toppages_show_path
          - else
            = link_to image_tag("#{@user.image}", {width: "40", alt: "ユーザプロフィール", class: "img-rounded"}), toppages_show_path
        li.nav-item
          = link_to "#{@user.username}", toppages_show_path, class: "nav-link"
        li.nav-item
          = link_to "タグ", new_tag_path, class: "nav-link"
        li.nav-item
          = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link"
      - else
        li.nav-item
          = link_to 'サインアップ', new_user_registration_path, class: "nav-link"
        li.nav-item
          = link_to 'ログイン', new_user_session_path, class: "nav-link"
    = form_tag(toppages_index_path, method: :get, class: "form-inline") do
      = text_field_tag :search, nil, {class: "form-control mr-sm-2", placeholder: "検索ワード"}
      = submit_tag "本文検索", class: "btn btn-outline-info my-2 my-sm-0"