- if user_signed_in?
  = link_to 'プロフィール変更', edit_user_registration_path, class: "btn btn-secondary"
br
br
table.table.table-striped
  tr
    th ユーザ名
    td = current_user.username
  - if user_signed_in?
    tr
      th メールアドレス
      td = current_user.email
  tr
    th 性別
    td = current_user.sex
  tr
    th 誕生日
    td = current_user.birth_day
  tr
    th プロフィール
    td = current_user.profile
  tr
    th ベンチプレスMAX(kg)
    td = current_user.bench_press_max
  tr
    th スクワットMAX(kg)
    td = current_user.squat_max
  tr
    th デッドリフトMAX(kg)
    td = current_user.deadlift_max